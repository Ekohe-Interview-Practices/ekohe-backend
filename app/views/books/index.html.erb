<%= turbo_frame_tag "main" do %>
  <p id="notice"><%= notice %></p>

  <h2>Books</h2>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Fee</th>
        <th>Count</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.fee %></td>
          <td><%= book.count %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>

  <a href="/">Back</a> | <%= link_to 'New Book', new_book_path %>
<% end %>